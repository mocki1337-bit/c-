<body>
    <div class="container">

        <!-- ЗАГОЛОВОК -->
        <header class="header" data-aos="fade-down" data-aos-duration="1800">
            <h1>СМОРГОНЬ 1916</h1>
            <p>Хроники Первой мировой войны</p>
        </header>

        <!-- РЕЖИМЫ -->
        <section class="modes" data-aos="fade-up" data-aos-delay="500">
            <div class="mode-card" onclick="App.switchMode('encyclopedia')">
                <div class="mode-icon">Book</div>
                <h3>Узнать правду</h3>
                <p>Факты, фото, видео</p>
            </div>
            <div class="mode-card" onclick="App.switchMode('game')">
                <div class="mode-icon">Gamepad</div>
                <h3>Выжить в аду</h3>
                <p>Интерактивная история</p>
            </div>
        </section>

        <!-- ЭНЦИКЛОПЕДИЯ -->
        <section id="encyclopedia" class="glass">
            <h2 class="section-title">Исторические факты</h2>
            <div class="fact-grid" id="facts-container"></div>
        </section>

        <!-- ИГРА -->
        <section id="game" class="glass">
            <h2 class="section-title">Выбери персонажа</h2>
            <div class="character-grid" id="character-selection"></div>
            <div id="gameplay-area" style="display:none;">
                <div class="chat-area" id="chat-messages"></div>
                <div class="progress-container">
                    <div class="progress-bar" id="survival-progress"></div>
                </div>
                <div class="choice-container" id="choice-buttons"></div>
            </div>
        </section>

        <!-- VOLUME SWITCH -->
        <div id="volume-control">
            <span id="volume-label">Volume Off</span>
            <div id="volume-toggle">
                <input type="checkbox" id="volume-switch" />
                <label for="volume-switch" class="volume-slider"></label>
            </div>
        </div>

    </div>

    <!-- БИБЛИОТЕКИ -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

    <!-- ЛОГИКА + HAPTIC -->
    <script>
        AOS.init({ duration: 1200, once: true });

        const App = {
            currentMode: '',
            facts: [],
            currentCharacter: '',
            survivalScore: 0,
            soundEnabled: false,
            backgroundMusic: null,

            // HAPTIC — МОЩНЫЙ ОТКЛИК
            haptic: {
                impact: (type) => window.Telegram?.WebApp?.HapticFeedback?.impactOccurred?.(type),
                selection: () => window.Telegram?.WebApp?.HapticFeedback?.selectionChanged?.(),
                flash: () => {
                    const f = document.createElement('div');
                    f.style.cssText = 'position:fixed;top:0;left:0;width:100vw;height:100vh;background:radial-gradient(circle,rgba(255,150,50,0.8),transparent);pointer-events:none;z-index:9999;opacity:0;animation:flash 0.6s forwards;';
                    document.body.appendChild(f);
                    setTimeout(() => f.remove(), 600);
                },
                shake: () => {
                    document.body.style.animation = 'shake 0.5s ease-out';
                    setTimeout(() => document.body.style.animation = '', 500);
                },
                pop: (el) => {
                    el.style.opacity = '0'; el.style.transform = 'scale(0.88)';
                    requestAnimationFrame(() => {
                        el.style.transition = 'all 0.38s ease-out';
                        el.style.opacity = '1'; el.style.transform = 'scale(1)';
                    });
                }
            },

            init() {
                if (window.Telegram?.WebApp) Telegram.WebApp.ready();
                this.initVolume();
                this.loadFacts();
            },

            loadFacts() {
                fetch('facts.json')
                    .then(r => r.json())
                    .then(data => {
                        this.facts = data;
                        this.renderFacts();
                    })
                    .catch(() => {
                        this.facts = [
                            { id: 1, title: 'Пример факта', text: 'Факты не загружены', year: '1916', image: 'https://via.placeholder.com/300' }
                        ];
                        this.renderFacts();
                    });
            },

            renderFacts() {
                const container = document.getElementById('facts-container');
                container.innerHTML = this.facts.map(f => `
                    <div class="fact-card" onclick="App.showFact(${f.id})" data-aos="fade-up" data-aos-delay="${f.id * 120}">
                        <img src="${f.image}" class="fact-img" alt="${f.title}" loading="lazy">
                        <div class="fact-content">
                            <div class="fact-year">${f.year}</div>
                            <div class="fact-title">${f.title}</div>
                            <p class="fact-text">${f.text.substring(0, 120)}...</p>
                        </div>
                    </div>
                `).join('');
            },

            showFact(id) {
                const f = this.facts.find(x => x.id === id);
                if (f) alert(`${f.title} (${f.year})\n\n${f.text}`);
                this.haptic.impact('light');
            },

            switchMode(mode) {
                this.currentMode = mode;
                document.getElementById('encyclopedia').style.display = mode === 'encyclopedia' ? 'block' : 'none';
                document.getElementById('game').style.display = mode === 'game' ? 'block' : 'none';
                if (mode === 'game') this.renderCharacters();
                this.haptic.selection();
            },

            renderCharacters() {
                document.getElementById('character-selection').innerHTML = `
                    <div class="char-btn" onclick="App.startGame('soldier')">Солдат</div>
                    <div class="char-btn" onclick="App.startGame('nurse')">Медсестра</div>
                    <div class="char-btn" onclick="App.startGame('resident')">Житель</div>
                `;
                document.querySelectorAll('.char-btn').forEach(btn => {
                    btn.addEventListener('click', () => this.haptic.impact('medium'));
                });
            },

            startGame(char) {
                this.currentCharacter = char;
                document.getElementById('character-selection').style.display = 'none';
                document.getElementById('gameplay-area').style.display = 'block';
                this.addMessage('AI', `Ты — ${char === 'soldier' ? 'солдат' : char === 'nurse' ? 'медсестра' : 'житель'}. 1916 год. Что делать?`);
                this.showChoices(['Осмотреться', 'Позвать помощь', 'Спрятаться']);
                this.haptic.impact('heavy');
            },

            showChoices(options) {
                const container = document.getElementById('choice-buttons');
                container.innerHTML = options.map(opt => `
                    <button class="choice-btn" onclick="App.selectChoice('${opt}')">${opt}</button>
                `).join('');
                document.querySelectorAll('.choice-btn').forEach(btn => {
                    btn.addEventListener('click', () => this.haptic.selection());
                });
            },

            selectChoice(choice) {
                const userMsg = this.addMessage('user', choice);
                this.haptic.pop(userMsg);
                this.haptic.selection();

                document.getElementById('choice-buttons').innerHTML = '';
                setTimeout(() => {
                    const response = this.generateResponse(choice);
                    const aiMsg = this.addMessage('AI', response);
                    this.haptic.pop(aiMsg);
                    this.haptic.impact('heavy');
                    if (this.soundEnabled) new Audio('https://cdn.freesound.org/previews/276/276022_5123850-lq.mp3').play().catch(() => { });
                    this.haptic.flash();
                    this.haptic.shake();
                    this.updateSurvival(12);
                }, 1000);
            },

            generateResponse(choice) {
                const responses = {
                    'Осмотреться': 'Ты видишь разрушенные дома. Дым поднимается к небу.',
                    'Позвать помощь': 'Ты кричишь. Из окопа выглядывает раненый солдат.',
                    'Спрятаться': 'Ты ныряешь в воронку. Снаряд разрывается рядом.'
                };
                return responses[choice] || 'Ты действуешь...';
            },

            addMessage(sender, text) {
                const area = document.getElementById('chat-messages');
                const bubble = document.createElement('div');
                bubble.className = `message-bubble ${sender === 'user' ? 'user-msg' : 'ai-msg'}`;
                bubble.innerHTML = `<strong>${sender === 'user' ? 'Ты' : 'AI'}:</strong> ${text}`;
                area.appendChild(bubble);
                bubble.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                return bubble;
            },

            updateSurvival(points) {
                this.survivalScore += points;
                const bar = document.getElementById('survival-progress');
                bar.style.width = Math.min(this.survivalScore, 100) + '%';
            },

            // VOLUME — МОЩНАЯ ВИБРАЦИЯ
            initVolume() {
                const label = document.getElementById('volume-label');
                const checkbox = document.getElementById('volume-switch');

                checkbox.addEventListener('change', () => {
                    this.soundEnabled = checkbox.checked;
                    label.textContent = this.soundEnabled ? 'Volume On' : 'Volume Off';
                    label.style.color = this.soundEnabled ? 'var(--green)' : 'rgba(255,255,255,0.94)';

                    if (this.soundEnabled && !this.backgroundMusic) {
                        this.backgroundMusic = new Audio('https://cdn.freesound.org/previews/620/620461_5674468-lq.mp3');
                        this.backgroundMusic.loop = true;
                        this.backgroundMusic.volume = 0.28;
                        this.backgroundMusic.play().catch(() => { });
                    } else if (!this.soundEnabled && this.backgroundMusic) {
                        this.backgroundMusic.pause();
                    }

                    // МОЩНЫЙ HAPTIC ПРИ ПЕРЕКЛЮЧЕНИИ
                    this.haptic.impact('heavy');
                    setTimeout(() => this.haptic.impact('medium'), 80);
                    setTimeout(() => this.haptic.impact('light'), 160);
                });
            }
        };

        document.addEventListener('DOMContentLoaded', () => App.init());
    </script>
    
</body>

</html>
